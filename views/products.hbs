<form action="/products" method="get">
    <div class="row mb-3">
        <div class="col-sm-10">
            <div class="form-group">
                <input type="text" class="form-control" name="search" id="search" placeholder="Search product">
            </div>
        </div>
        <div class="col-sm-2">
            <button class="btn btn-primary btn-block">Search</button>
        </div>
    </div>
</form>
{{#if search}}
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    Searched "{{search}}"
                    <a href="/products" class="btn btn-sm btn-secondary float-right">Cancel</a>
                </div>
            </div>
        </div>
    </div>
{{/if}}
<div class="row">
    {{#each products}}
    <div class="col-sm-4 mb-4">
        <div class="card h-100">
            <img class="card-img-top" src="{{this.image}}" alt="">
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text">{{this.excerpt}}</p>
            </div>
            <div class="card-footer">
                Ratings: {{this.rating}}
                <span class="float-right">Price: ${{this.price}}</span>
            </div>
        </div>
    </div>
    {{/each}}
</div>